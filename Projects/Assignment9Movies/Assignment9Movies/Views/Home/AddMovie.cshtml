@{
    ViewBag.Title = "Here you can add a movie to the database";
}

@model Assignment9Movies.Models.Movies
<form asp-action="AddMovie" method="post">
    <div>
        <label asp-for="Category"> Category: </label>
        <input asp-for="Category" />
    </div>

    <div>
        <label asp-for="Title"> Title: </label>
        <input asp-for="Title" />
    </div>

    <div>
        <label asp-for="Year"> Year: </label>
        <input asp-for="Year" />
    </div>

    <div>
        <label asp-for="Director"> Director: </label>
        <input asp-for="Director" />
    </div>

    <div>
        <label asp-for="Rating"> Rating: </label>
        <select asp-for="Rating">
            <option value=""> What is it rated?</option>
            <option value="G"> G</option>
            <option value="PG"> PG</option>
            <option value="PG13"> PG-13</option>
            <option value="R"> R</option>
        </select>
    </div>
    <div>
        <label asp-for="Edited"> Edited? </label>
        <select asp-for="Edited">
            <option value=""> Select One</option>
            <option value="true"> Yes</option>
            <option value="false"> No</option>
        </select>
        <div>
            <label asp-for="LentTo"> Who (if anyone) did you lend it to? (Optional): </label>
            <input asp-for="LentTo" />
        </div>

        <div>
            <label asp-for="Notes"> Notes: </label>
            <input asp-for="Notes" />
        </div>
    </div>
    <div asp-validation-summary="All"></div>

    <button type="submit"> Submit</button>
</form>
